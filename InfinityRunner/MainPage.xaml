              <HorizontalStackLayout x:Name="layerSemaforo">
                     <Image Source="semaforo.png"
                            HeightRequest="300"/>
                     <Image Source="semaforo.png"
                            HeightRequest="300"/>
                     <Image Source="semaforo.png"
                            HeightRequest="300"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout x:Name="layerAsfalto">
                     <Image Source="asfalto.jpeg"
                            WidthRequest="400"
                            VerticalOptions="End"/>
                     <Image Source="asfalto.jpeg"
                            WidthRequest="400"
                            VerticalOptions="End"/>
                     <Image Source="asfalto.jpeg"
                            WidthRequest="400"
                            VerticalOptions="End"/>
